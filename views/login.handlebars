<section id="login-container" class="container">
    <input type="checkbox" id="signup_toggle" hidden>
    <article class="form">
        <form id="form-login" class="form_front">
            <h2 class="form_details">Login</h2>
            <input id="login-email" type="email" class="input" placeholder="Email">
            <span id="login-email-error" class="error-message"></span>
            <input id="login-password" type="password" class="input" placeholder="Password">
            <span id="login-password-error" class="error-message"></span>
            <button id="login-btn" type="submit" class="btn">Login</button>
            <p class="switch">Don't have an account? <a><span class="signup_tog">Sign Up</span></p>
        </form>
        </form>
        <form id="form-signup" class="form_back">
            <h2 class="form_details">Sign up</h2>
            <input id="firstName" type="text" class="input" placeholder="First Name">
            <input id="lastName" type="text" class="input" placeholder="Last Name">
            <input id="signup-email" type="text" class="input" placeholder="Email">
            <input id="signup-password" type="password" class="input" placeholder="Password">
            <input id="phone" type="text" class="input" placeholder="Phone Number">
            <button type="submit" class="btn">Register</button>
            <p class="switch">Have an account? <span class="signup_tog">Login</span></p>
        </form>
    </article>
</section>

    <div id="loader" class="spinner">
        <div class="spinner1"></div>
    </div>

<script src="/js/login.js"></script>